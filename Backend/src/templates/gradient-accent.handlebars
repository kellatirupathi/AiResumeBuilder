<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base Styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.4;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      border-radius: 0.375rem;
      overflow: hidden;
    }
    
    /* Header with Gradient */
    .header {
      padding: 1rem;
      color: white;
      position: relative;
    }
    
    .header-content {
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 0.5rem;
    }
    
    @media (min-width: 768px) {
      .header-content {
        flex-direction: row;
      }
    }
    
    .name-container {
      margin-bottom: 0.25rem;
    }
    
    .name {
      font-size: 1.5rem;
      font-weight: 700;
      margin: 0;
    }
    
    .job-title {
      font-size: 1.125rem;
      margin: 0.125rem 0 0 0;
      opacity: 0.9;
    }
    
    .contact-container {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      font-size: 0.875rem;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
    }
    
    .contact-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.5rem;
    }
    
    /* Social Links Bar */
    .social-bar {
      background-color: #f3f4f6;
      padding: 0.25rem 1rem;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.75rem;
    }
    
    @media (min-width: 768px) {
      .social-bar {
        justify-content: flex-end;
      }
    }
    
    .social-link {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.875rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .social-link:hover {
      text-decoration: underline;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
    }
    
    /* Main Content */
    .main-content {
      padding: 0.5rem; /* Reduced padding */
    }
    
    /* Summary Section */
    .summary {
      margin-bottom: 0.25rem; /* Reduced margin */
      padding: 0.5rem;
      border-radius: 0.25rem;
      position: relative;
      background-color: {{themeColorTransparent05}};
      border-left: 2px solid {{themeColorTransparent30}};
    }
    
    .summary-title {
      font-size: 1rem;
      font-weight: 700;
      margin: 0 0 0.25rem 0;
      color: {{themeColor}};
    }
    
    .summary-text {
      font-size: 0.875rem;
      color: #4b5563;
      margin: 0;
    }
    
    /* Two-Column Layout */
    .columns {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }
    
    @media (min-width: 768px) {
      .columns {
        grid-template-columns: 2fr 1fr;
      }
    }
    
    .left-column,
    .right-column {
      display: flex;
      flex-direction: column;
      gap: 0.25rem; /* Reduced gap */
    }
    
    /* Section Styling */
    .section {
      margin-bottom: 0.25rem; /* Reduced margin */
    }
    
    .section-title {
      font-size: 1rem;
      font-weight: 700;
      margin: 0 0 0.25rem 0;
      padding-bottom: 0.25rem;
      border-bottom: 1px solid {{themeColorTransparent20}};
      color: {{themeColor}};
    }
    
    .right-section-title {
      font-size: 1rem;
      font-weight: 700;
      margin: 0 0 0.25rem 0;
      padding-bottom: 0.25rem;
      border-bottom: 1px solid {{themeColorTransparent20}};
      color: {{themeColor}};
    }
    
    /* Experience Items */
    .experience-container {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }
    
    .experience-item {
      position: relative;
      padding-left: 0.5rem;
      padding-bottom: 0.25rem;
      border-left: 1px solid {{themeColorTransparent20}};
    }
    
    .experience-header {
      display: flex;
      flex-direction: column;
      margin-bottom: 0.125rem;
    }
    
    @media (min-width: 768px) {
      .experience-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        gap: 0.25rem;
      }
    }
    
    .job-title-text {
      font-size: 1rem;
      font-weight: 700;
      color: #1f2937;
      margin: 0;
    }
    
    .job-date {
      font-size: 0.75rem;
      display: inline-flex;
      align-items: center;
      padding: 0 0.5rem;
      border-radius: 0.25rem;
      background-color: {{themeColorTransparent10}};
      color: {{themeColor}};
    }
    
    .company {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0 0 0.25rem 0;
    }
    
    .job-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* Project Items */
    .projects-container {
      display: flex;
      flex-direction: column;
    }
    
    .project-item {
      padding-bottom: 0.25rem; /* Reduced from padding all sides */
    }
    
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: 700;
      color: #1f2937;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 0.5rem;
    }
    
    .project-link {
      display: flex;
      align-items: center;
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .project-link:hover {
      text-decoration: underline;
    }
    
    .project-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
    }
    
    .project-tech {
      display: inline-block;
      font-size: 0.75rem;
      padding: 0 0.5rem;
      border-radius: 0.25rem;
      background-color: {{themeColorTransparent10}};
      color: {{themeColor}};
    }
    
    .project-description {
      font-size: 0.8rem;
      color: #4b5563;
    }
    
    /* Certification Items */
    .certifications-container {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }
    
    .certification-item {
      position: relative;
      padding-left: 0.5rem;
      padding-bottom: 0.25rem;
    }
    
    .cert-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .cert-title {
      font-size: 1rem;
      font-weight: 700;
      color: #1f2937;
      margin: 0;
    }
    
    .cert-date {
      font-size: 0.75rem;
      padding: 0 0.5rem;
      border-radius: 0.25rem;
      background-color: {{themeColorTransparent10}};
      color: {{themeColor}};
    }
    
    .cert-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .cert-issuer {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0;
    }
    
    .cert-link {
      display: inline-flex;
      align-items: center;
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .cert-link:hover {
      text-decoration: underline;
    }
    
    .cert-link-icon {
      width: 0.875rem;
      height: 0.875rem;
      margin-right: 0.375rem;
    }
    
    /* Education Items */
    .education-container {
      display: flex;
      flex-direction: column;
    }
    
    .education-item {
      padding: 0.25rem; /* Reduced padding */
      border-radius: 0.25rem;
      background-color: {{themeColorTransparent05}};
    }
    
    .degree {
      font-size: 1rem;
      font-weight: 500;
      letter-spacing: 0.025em;
      margin: 0;
      color: {{themeColor}};
    }
    
    .school {
      font-size: 1rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0.25rem 0;
    }
    
    .education-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.875rem;
      color: #6b7280;
      margin-top: 0.25rem;
    }
    
    .grade {
      font-weight: 500;
    }
    
    /* Skills Section */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
    }
    
    .skill-tag {
      padding: 0.375rem 0.75rem;
      border-radius: 0.25rem;
      font-size: 1rem;
      letter-spacing: 0.025em;
      background-color: {{themeColorTransparent10}};
      color: {{themeColor}};
    }

    .additional-section-content {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    @media print {
      .resume {
        box-shadow: none;
        border-radius: 0;
      }
      
      .experience-item, .project-item, .certification-item, .education-item {
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header -->
    <div class="header" style="background: linear-gradient(135deg, {{themeColor}} 0%, {{themeColorTransparent80}} 100%);">
      <div class="header-content">
        <div class="name-container">
          <h1 class="name">{{firstName}} {{lastName}}</h1>
          {{#if jobTitle}}
            <h2 class="job-title">{{jobTitle}}</h2>
          {{/if}}
        </div>
        
        <div class="contact-container">
          {{#if email}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{{email}}</span>
            </div>
          {{/if}}
          
          {{#if phone}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{{phone}}</span>
            </div>
          {{/if}}
          
          {{#if address}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{{address}}</span>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
    
    <!-- Social Links Bar -->
    {{#if (or linkedinUrl githubUrl portfolioUrl)}}
      <div class="social-bar">
        {{#if linkedinUrl}}
          <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/></svg> LinkedIn
          </a>
        {{/if}}
        {{#if githubUrl}}
          <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg> GitHub
          </a>
        {{/if}}
        {{#if portfolioUrl}}
          <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" /></svg> Portfolio
          </a>
        {{/if}}
      </div>
    {{/if}}
    
    <!-- Main Content -->
    <div class="main-content">
      <!-- Summary Section -->
      {{#if summary}}
        <div class="summary">
          <h3 class="summary-title">SUMMARY</h3>
          <p class="summary-text">{{summary}}</p>
        </div>
      {{/if}}
      
      <!-- Two-Column Layout -->
      <div class="columns">
        <!-- Left Column -->
        <div class="left-column">
          <!-- Experience Section -->
          {{#if experience.length}}
            <div class="section">
              <h3 class="section-title">EXPERIENCE</h3>
              <div class="experience-container">
                {{#each experience}}
                  <div class="experience-item">
                    <div class="experience-header">
                      <h4 class="job-title-text">{{this.title}}</h4>
                      <span class="job-date">
                        {{this.startDate}}{{#if this.startDate}}{{#if (or this.endDate this.currentlyWorking)}} - {{/if}}{{/if}}
                        {{#if this.currentlyWorking}}Present{{else}}{{this.endDate}}{{/if}}
                      </span>
                    </div>
                    <h5 class="company">
                      {{this.companyName}}{{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}{{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                    </h5>
                    <div class="job-description">{{{this.workSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Projects Section -->
          {{#if projects.length}}
            <div class="section">
              <h3 class="section-title">PROJECTS</h3>
              <div class="projects-container">
                {{#each projects}}
                  <div class="project-item">
                    <div class="project-header">
                      <h4 class="project-title">{{this.projectName}}</h4>
                      <div class="project-links">
                        {{#if this.githubLink}}<a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link"><svg class="project-link-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>Code</a>{{/if}}
                        {{#if this.deployedLink}}<a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link"><svg class="project-link-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>Live Demo</a>{{/if}}
                      </div>
                    </div>
                    {{#if this.techStack}}<div class="project-tech">{{this.techStack}}</div>{{/if}}
                    <div class="project-description">{{{this.projectSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
           <!-- Additional Sections -->
          {{#if additionalSections.length}}
            {{#each additionalSections}}
              <div class="section">
                <h3 class="section-title">{{this.title}}</h3>
                <div class="additional-section-content experience-item">
                  <div class="job-description">
                      {{{this.content}}}
                  </div>
                </div>
              </div>
            {{/each}}
          {{/if}}

        </div>
        
        <!-- Right Column -->
        <div class="right-column">
          <!-- Education Section -->
          {{#if education.length}}
            <div class="section">
              <h3 class="right-section-title">EDUCATION</h3>
              <div class="education-container">
                {{#each education}}
                  <div class="education-item">
                    <h4 class="degree">{{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}</h4>
                    <h5 class="school">{{this.universityName}}</h5>
                    <div class="education-details">
                      <span>{{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{/if}}{{/if}}{{this.endDate}}</span>
                      {{#if this.grade}}<span class="grade">{{this.gradeType}}: {{this.grade}}</span>{{/if}}
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Skills Section -->
          {{#if skills.length}}
            <div class="section">
              <h3 class="right-section-title">SKILLS</h3>
              <div class="skills-container">
                {{#each skills}}
                  <div class="skill-tag">{{this.name}}</div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
           <!-- Certifications Section -->
          {{#if certifications.length}}
            <div class="section">
              <h3 class="right-section-title">CERTIFICATIONS</h3>
              <div class="certifications-container">
                {{#each certifications}}
                  <div class="certification-item">
                    <div class="cert-header">
                      <h4 class="cert-title">{{this.name}}</h4>
                      {{#if this.date}}
                        <span class="cert-date">{{this.date}}</span>
                      {{/if}}
                    </div>
                    <div class="cert-details">
                      <h5 class="cert-issuer">{{this.issuer}}</h5>
                      {{#if this.credentialLink}}
                        <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="cert-link">
                          <svg class="cert-link-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                          </svg>
                          View
                        </a>
                      {{/if}}
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</body>
</html>