<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base Styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.4;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      border-radius: 0.375rem;
      overflow: hidden;
      border: 1px solid #e5e7eb;
    }
    
    /* Header Section */
    .header {
      padding: 0.75rem;
      /* No border bottom here */
    }
    
    .header-content {
      text-align: center;
      margin-bottom: 0.5rem;
    }
    
    .name {
      font-size: 1.5rem;
      font-weight: 700;
      margin: 0 0 0.125rem 0;
    }
    
    .job-title {
      font-size: 1.125rem;
      color: #4b5563;
      margin: 0 0 0.25rem 0;
    }
    
    .contact-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
    }
    
    .contact-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.25rem;
      color: #6b7280;
    }
    
    .social-row {
      display: flex;
      justify-content: center;
      gap: 0.5rem;
      font-size: 0.875rem;
    }
    
    .social-link {
      display: flex;
      align-items: center;
      text-decoration: none;
    }
    
    .social-link:hover {
      text-decoration: underline;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.125rem;
    }
    
    .linkedin-link {
      color: #2563eb;
    }
    
    .github-link {
      color: #1f2937;
    }
    
    .portfolio-link {
      color: #059669;
    }
    
    .summary {
      margin-top: 0.5rem;
      font-size: 0.875rem;
      color: #4b5563;
      border-top: 1px solid #e5e7eb;
      padding-top: 0.5rem;
    }
    
    /* Main Content */
    .main-content {
      padding: 0 0.75rem 0.75rem 0.75rem;
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }
    
    @media (min-width: 768px) {
      .main-content {
        grid-template-columns: 7fr 5fr;
      }
    }
    
    .column {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .section {
      margin-bottom: 0.5rem;
    }
    
    .section-title {
      font-size: 1.125rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      padding-bottom: 0.25rem;
      border-bottom: 1px solid #e5e7eb;
    }
    
    /* Experience Items */
    .experience-item {
      margin-bottom: 0.375rem;
    }
    
    .exp-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      margin-bottom: 0.125rem;
    }
    
    .exp-title {
      font-size: 1rem;
      font-weight: 700;
      margin: 0;
    }
    
    .exp-date {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    .exp-company {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin-bottom: 0.25rem;
    }
    
    .exp-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* Project Items */
    .project-item {
      margin-bottom: 0.375rem;
    }
    
    .project-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      margin-bottom: 0.25rem;
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .project-link {
      display: flex;
      align-items: center;
      font-size: 0.75rem;
      text-decoration: none;
    }
    
    .project-link:hover {
      text-decoration: underline;
    }
    
    .code-link {
      color: #4b5563;
    }
    
    .code-link:hover {
      color: #1f2937;
    }
    
    .demo-link {
      color: #2563eb;
    }
    
    .demo-link:hover {
      color: #1d4ed8;
    }
    
    .project-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.125rem;
    }
    
    .project-tech {
      font-size: 0.75rem;
      color: #6b7280;
      margin-bottom: 0.25rem;
    }
    
    .tech-label {
      font-weight: 500;
    }
    
    .project-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* Certification Items */
    .cert-item {
      margin-bottom: 0.375rem;
    }
    
    .cert-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .cert-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .cert-date {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    .cert-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .cert-issuer {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
    }
    
    .cert-link {
      display: flex;
      align-items: center;
      font-size: 0.75rem;
      color: #2563eb;
      text-decoration: none;
    }
    
    .cert-link:hover {
      text-decoration: underline;
    }
    
    .cert-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.125rem;
    }
    
    /* Skills Section */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .skill-tag {
      padding: 0.125rem 0.375rem;
      background-color: #f3f4f6;
      color: #4b5563;
      border-radius: 0.375rem;
      font-size: 0.875rem;
    }
    
    /* Education Items */
    .education-item {
      margin-bottom: 0.375rem;
    }
    
    .edu-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0 0 0.125rem 0;
    }
    
    .edu-school {
      font-size: 0.875rem;
      color: #4b5563;
      margin-bottom: 0.125rem;
    }
    
    .edu-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.75rem;
      color: #6b7280;
      margin-bottom: 0.125rem;
    }
    
    .edu-description {
      font-size: 0.75rem;
      color: #4b5563;
      margin-top: 0.25rem;
    }
    
    @media print {
      .resume {
        box-shadow: none;
        border-radius: 0;
        border: none;
        min-height: auto;
        height: auto;
      }
      
      .experience-item, .project-item, .cert-item, .education-item {
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header -->
    <div class="header">
      <div class="header-content">
        <h1 class="name">{{firstName}} {{lastName}}</h1>
        {{#if jobTitle}}
          <h2 class="job-title">{{jobTitle}}</h2>
        {{/if}}
        
        <!-- Contact Information -->
        <div class="contact-row">
          {{#if email}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{{email}}</span>
            </div>
          {{/if}}
          
          {{#if phone}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{{phone}}</span>
            </div>
          {{/if}}
          
          {{#if address}}
            <div class="contact-item">
              <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{{address}}</span>
            </div>
          {{/if}}
        </div>
        
        <!-- Social Links -->
        <div class="social-row">
          {{#if linkedinUrl}}
            <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link linkedin-link">
              <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
              </svg>
              LinkedIn
            </a>
          {{/if}}
          
          {{#if githubUrl}}
            <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link github-link">
              <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          {{/if}}
          
          {{#if portfolioUrl}}
            <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link portfolio-link">
              <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
              Portfolio
            </a>
          {{/if}}
        </div>
      </div>
      
      <!-- Summary -->
      {{#if summary}}
        <div class="summary">
          <p>{{summary}}</p>
        </div>
      {{/if}}
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
      <!-- Left Column - Experience, Projects, Certifications -->
      <div class="column">
        <!-- Experience Section -->
        {{#if experience.length}}
          <div class="section">
            <h3 class="section-title">Experience</h3>
            
            <div class="experience-list">
              {{#each experience}}
                <div class="experience-item">
                  <div class="exp-header">
                    <h4 class="exp-title">{{this.title}}</h4>
                    <span class="exp-date">
                      {{this.startDate}}{{#if this.startDate}}{{#if (or this.endDate this.currentlyWorking)}} - {{/if}}{{/if}}
                      {{#if this.currentlyWorking}}Present{{else}}{{this.endDate}}{{/if}}
                    </span>
                  </div>
                  
                  <div class="exp-company">
                    {{this.companyName}}
                    {{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                    {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                  </div>
                  
                  <div class="exp-description">{{{this.workSummary}}}</div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Projects Section -->
        {{#if projects.length}}
          <div class="section">
            <h3 class="section-title">Projects</h3>
            
            <div class="projects-list">
              {{#each projects}}
                <div class="project-item">
                  <div class="project-header">
                    <h4 class="project-title">{{this.projectName}}</h4>
                    
                    <div class="project-links">
                      {{#if this.githubLink}}
                        <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link code-link">
                          <svg class="project-link-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                          </svg>
                          Code
                        </a>
                      {{/if}}
                      
                      {{#if this.deployedLink}}
                        <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link demo-link">
                          <svg class="project-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                          Demo
                        </a>
                      {{/if}}
                    </div>
                  </div>
                  
                  {{#if this.techStack}}
                    <div class="project-tech">
                      <span class="tech-label">Tech Stack:</span> {{this.techStack}}
                    </div>
                  {{/if}}
                  
                  <div class="project-description">{{{this.projectSummary}}}</div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Certifications Section -->
        {{#if certifications.length}}
          <div class="section">
            <h3 class="section-title">Certifications</h3>
            
            <div class="certifications-list">
              {{#each certifications}}
                <div class="cert-item">
                  <div class="cert-header">
                    <h4 class="cert-title">{{this.name}}</h4>
                    {{#if this.date}}
                      <span class="cert-date">{{this.date}}</span>
                    {{/if}}
                  </div>
                  
                  <div class="cert-details">
                    <div class="cert-issuer">{{this.issuer}}</div>
                    {{#if this.credentialLink}}
                      <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="cert-link">
                        <svg class="cert-link-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                        </svg>
                        View
                      </a>
                    {{/if}}
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      </div>
      
      <!-- Right Column - Skills, Education, and Additional Sections -->
      <div class="column">
        <!-- Skills Section -->
        {{#if skills.length}}
          <div class="section">
            <h3 class="section-title">Skills</h3>
            
            <div class="skills-container">
              {{#each skills}}
                <span class="skill-tag">{{this.name}}</span>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Education Section -->
        {{#if education.length}}
          <div class="section">
            <h3 class="section-title">Education</h3>
            
            <div class="education-list">
              {{#each education}}
                <div class="education-item">
                  <h4 class="edu-title">
                    {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                  </h4>
                  
                  <div class="edu-school">{{this.universityName}}</div>
                  
                  <div class="edu-details">
                    <span>
                      {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{/if}}{{/if}}
                      {{this.endDate}}
                    </span>
                    
                    {{#if this.grade}}
                      <span>
                        {{this.gradeType}}: {{this.grade}}
                      </span>
                    {{/if}}
                  </div>
                  
                  {{#if this.description}}
                    <p class="edu-description">{{this.description}}</p>
                  {{/if}}
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}

        <!-- Additional Sections -->
        {{#if additionalSections.length}}
          {{#each additionalSections}}
            <div class="section">
              <h3 class="section-title">{{this.title}}</h3>
              <div class="project-description">
                  {{{this.content}}}
              </div>
            </div>
          {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>