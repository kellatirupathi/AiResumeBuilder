<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      border-radius: 0.375rem;
      overflow: hidden;
    }
    
    /* Header section */
.header {
  padding: 1rem 1rem 0.1rem 1rem; /* Reduced bottom padding to 90% */
  background-color: {{themeColorLight}};
  position: relative;
}
    
    .header-content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: flex-start;
    }
    
    @media (min-width: 768px) {
      .header-content {
        flex-direction: row;
      }
    }
    
    .header-left {
      margin-bottom: 0.75rem;
    }
    
    @media (min-width: 768px) {
      .header-left {
        margin-bottom: 0;
      }
    }
    
    .name {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 0.25rem;
      color: {{themeColor}};
    }
    
    .job-title {
      font-size: 1.125rem;
      color: #4b5563;
      font-weight: 500;
      margin: 0;
    }
    
    .summary {
      max-width: 32rem;
      margin-top: 0.4rem; /* Reduced from 0.5rem (80%) */
      font-size: 0.875rem;
      color: #4b5563;
      margin-bottom: 0;
    }
    
    /* Contact box */
    .contact-box {
      padding: 0.5rem 1rem;
      border-radius: 0.375rem;
      background-color: white;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      border-left: 2px solid {{themeColor}};
    }
    
    .contact-items {
      display: flex;
      flex-direction: column;
      gap: 0.2rem; /* Reduced from 0.25rem */
    }
    
    .contact-item {
      display: flex;
      align-items: center;
      font-size: 0.875rem;
    }
    
    .contact-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.5rem;
      fill: none;
      stroke: {{themeColor}};
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    .contact-text {
      color: #4b5563;
    }
    
    /* Social icons */
    .social-links {
      display: flex;
      align-items: center;
      margin-top: 0.2rem; /* Reduced from 0.25rem */
      gap: 0.75rem;
    }
    
    .social-link {
      color: {{themeColor}};
      transition: opacity 0.2s;
    }
    
    .social-link:hover {
      opacity: 0.8;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
      fill: currentColor;
    }
    
    .social-icon-outline {
      width: 1rem;
      height: 1rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    .main-content {
  padding-top: 0rem; /* Reduced from 0.9rem (50%) to significantly reduce space after header */
  padding-left: 0.9rem;
  padding-right: 0.9rem;
  padding-bottom: 0.9rem;
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
}
    
    @media (min-width: 768px) {
      .main-content {
        grid-template-columns: 2fr 1fr;
      }
    }
    
    /* Sections */
    .section {
      margin-bottom: 0.7rem; /* Reduced to further decrease space between sections */
    }
    
    .section-title {
      font-size: 1.125rem;
      font-weight: bold;
      margin-bottom: 0.4rem; /* Reduced from 0.5rem */
      padding-bottom: 0.25rem;
      border-bottom: 1px solid;
      border-color: {{themeColorMedium}};
      color: {{themeColor}};
    }
    
    .section-content {
      display: flex;
      flex-direction: column;
      gap: 0.4rem; /* Reduced from 0.5rem */
    }
    
    /* Experience items */
    .experience-item {
      position: relative;
      display: flex;
    }
    
    .bullet {
      flex-shrink: 0;
      margin-top: 0.25rem;
      margin-right: 0.75rem;
      width: 0.75rem;
      height: 0.75rem;
      border-radius: 9999px;
      background-color: {{themeColor}};
    }
    
    .experience-content {
      flex-grow: 1;
    }
    
    .experience-header {
      display: flex;
      flex-direction: column;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
    }
    
    @media (min-width: 768px) {
      .experience-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }
    
    .experience-title {
      font-size: 1rem;
      font-weight: bold;
      color: #1f2937;
      margin: 0;
    }
    
    .experience-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .experience-company {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
      margin-top: 0;
    }
    
    .experience-description {
      font-size: 0.875rem;
      color: #4b5563;
      margin-top: 0;
    }
    
    /* Project items */
    .project-item {
      padding: 0.6rem; /* Reduced from 0.75rem */
      border-radius: 0.375rem;
      border: 1px solid;
      border-color: {{themeColorLight}};
    }
    
    .project-header {
      display: flex;
      flex-direction: column;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
    }
    
    @media (min-width: 768px) {
      .project-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
      }
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: bold;
      color: #1f2937;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 0.75rem;
      margin-top: 0.15rem; /* Reduced from 0.25rem */
    }
    
    @media (min-width: 768px) {
      .project-links {
        margin-top: 0;
      }
    }
    
    .project-link {
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
      display: flex;
      align-items: center;
    }
    
    .project-link:hover {
      text-decoration: underline;
    }
    
    .project-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
    }
    
    .project-tech {
      font-size: 0.75rem;
      color: #4b5563;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
      margin-top: 0;
    }
    
    .project-tech-label {
      font-weight: 500;
    }
    
    .project-description {
      font-size: 0.875rem;
      color: #4b5563;
      margin-top: 0;
    }
    
    /* Certification items */
    .certification-item {
      position: relative;
      display: flex;
    }
    
    .certification-content {
      flex-grow: 1;
    }
    
    .certification-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.1rem; /* Reduced from original */
    }
    
    .certification-title {
      font-size: 1rem;
      font-weight: bold;
      color: #1f2937;
      margin: 0;
    }
    
    .certification-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .certification-issuer-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .certification-issuer {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0;
    }
    
    .certification-link {
      display: flex;
      align-items: center;
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .certification-link:hover {
      text-decoration: underline;
    }
    
    .certification-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Education items */
    .education-item {
      padding: 0.4rem; /* Reduced from 0.5rem */
      border-radius: 0.375rem;
      border: 1px solid;
      border-color: {{themeColorLight}};
    }
    
    .education-title {
      font-size: 0.875rem;
      font-weight: bold;
      color: #1f2937;
      margin: 0 0 0.15rem 0; /* Reduced from 0.25rem */
    }
    
    .education-school {
      font-size: 0.75rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0;
    }
    
    .education-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0.15rem 0; /* Reduced from 0.25rem */
    }
    
    .education-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .education-grade {
      font-size: 0.75rem;
      color: #4b5563;
    }
    
    .education-description {
      font-size: 0.75rem;
      color: #4b5563;
      margin-top: 0.15rem; /* Reduced from 0.25rem */
      margin-bottom: 0;
    }
    
    /* Skills */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
    }
    
    .skill-tag {
      padding: 0.2rem 0.5rem; /* Reduced top/bottom from 0.25rem */
      font-size: 0.75rem;
      border-radius: 0.375rem;
      border: 1px solid;
      border-color: {{themeColorMedium}};
      color: #4b5563;
    }
    
    @media print {
      .resume {
        box-shadow: none;
        border-radius: 0;
      }
      
      .section, .experience-item, .project-item, .certification-item, .education-item {
        page-break-inside: avoid;
      }
      
      .contact-box {
        box-shadow: none;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header section with contact info -->
    <div class="header">
      <div class="header-content">
        <div class="header-left">
          <h1 class="name">{{firstName}} {{lastName}}</h1>
          {{#if jobTitle}}
            <h2 class="job-title">{{jobTitle}}</h2>
          {{/if}}
          
          <!-- Summary -->
          {{#if summary}}
            <div class="summary">
              <p>{{summary}}</p>
            </div>
          {{/if}}
        </div>
        
        <!-- Contact info in a simple box -->
        <div class="contact-box">
          <div class="contact-items">
            {{#if email}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="contact-text">{{email}}</span>
              </div>
            {{/if}}
            
            {{#if phone}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="contact-text">{{phone}}</span>
              </div>
            {{/if}}
            
            {{#if address}}
              <div class="contact-item">
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="contact-text">{{address}}</span>
              </div>
            {{/if}}
            
            <!-- Social Links -->
            <div class="social-links">
              {{#if linkedinUrl}}
                <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon" viewBox="0 0 24 24">
                    <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
                  </svg>
                </a>
              {{/if}}
              
              {{#if githubUrl}}
                <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              {{/if}}
              
              {{#if portfolioUrl}}
                <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon-outline" viewBox="0 0 24 24">
                    <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main content with clean layout -->
    <div class="main-content">
      <!-- Left column - Experience and Projects -->
      <div class="left-column">
        <!-- Experience Section -->
        {{#if experience.length}}
          <div class="section">
            <h3 class="section-title">Experience</h3>
            
            <div class="section-content">
              {{#each experience}}
                <div class="experience-item">
                  <div class="bullet"></div>
                  
                  <div class="experience-content">
                    <div class="experience-header">
                      <h4 class="experience-title">{{this.title}}</h4>
                      <span class="experience-date">
                        {{this.startDate}}{{#if this.startDate}}{{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}{{/if}}
                      </span>
                    </div>
                    
                    <h5 class="experience-company">
                      {{this.companyName}}
                      {{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                      {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                    </h5>
                    
                    <div class="experience-description">{{{this.workSummary}}}</div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Projects Section -->
        {{#if projects.length}}
          <div class="section">
            <h3 class="section-title">Projects</h3>
            
            <div class="section-content">
              {{#each projects}}
                <div class="project-item">
                  <div class="project-header">
                    <h4 class="project-title">{{this.projectName}}</h4>
                    <div class="project-links">
                      {{#if this.githubLink}}
                        <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                          <svg class="project-link-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                          </svg>
                          Code
                        </a>
                      {{/if}}
                      
                      {{#if this.deployedLink}}
                        <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                          <svg class="project-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                          </svg>
                          Live Demo
                        </a>
                      {{/if}}
                    </div>
                  </div>
                  
                  {{#if this.techStack}}
                    <div class="project-tech">
                      <span class="project-tech-label">Tech Stack:</span> {{this.techStack}}
                    </div>
                  {{/if}}
                  
                  <div class="project-description">{{{this.projectSummary}}}</div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Certifications Section -->
        {{#if certifications.length}}
          <div class="section">
            <h3 class="section-title">Certifications</h3>
            
            <div class="section-content">
              {{#each certifications}}
                <div class="certification-item">
                  <div class="bullet"></div>
                  
                  <div class="certification-content">
                    <div class="certification-header">
                      <h4 class="certification-title">{{this.name}}</h4>
                      {{#if this.date}}
                        <span class="certification-date">{{this.date}}</span>
                      {{/if}}
                    </div>
                    
                    <div class="certification-issuer-row">
                      <h5 class="certification-issuer">{{this.issuer}}</h5>
                      
                      {{#if this.credentialLink}}
                        <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="certification-link">
                          <svg class="certification-link-icon" viewBox="0 0 24 24">
                            <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                            <path d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                          </svg>
                          View
                        </a>
                      {{/if}}
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      </div>
      
      <!-- Right column - Education and Skills -->
      <div class="right-column">
        <!-- Education Section -->
        {{#if education.length}}
          <div class="section">
            <h3 class="section-title">Education</h3>
            
            <div class="section-content">
              {{#each education}}
                <div class="education-item">
                  <h4 class="education-title">
                    {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                  </h4>
                  
                  <h5 class="education-school">{{this.universityName}}</h5>
                  
                  <div class="education-meta">
                    <span class="education-date">
                      {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                    </span>
                    
                    {{#if this.grade}}
                      <span class="education-grade">
                        {{this.gradeType}}: {{this.grade}}
                      </span>
                    {{/if}}
                  </div>
                  
                  {{#if this.description}}
                    <p class="education-description">{{this.description}}</p>
                  {{/if}}
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Skills Section -->
        {{#if skills.length}}
          <div class="section">
            <h3 class="section-title">Skills</h3>
            
            <div class="skills-container">
              {{#each skills}}
                <div class="skill-tag">{{this.name}}</div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>