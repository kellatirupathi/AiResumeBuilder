<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.03); /* Reduced shadow opacity from 0.05 to 0.03 */
      border-radius: 0.375rem;
      overflow: hidden;
    }
    
    /* Header section */
    .header {
      padding: 1.2rem; /* Reduced from 1.5rem */
      border-bottom: 1px solid {{themeColorLight}};
    }
    
    .header-container {
      max-width: 56rem;
      margin-left: auto;
      margin-right: auto;
    }
    
    .header-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      gap: 0.8rem; /* Reduced from 1rem */
      margin-bottom: 0.6rem; /* Reduced from 1rem */
    }
    
    @media (min-width: 768px) {
      .header-content {
        flex-direction: row;
        align-items: flex-start;
      }
    }
    
    .name-title {
      text-align: center;
    }
    
    @media (min-width: 768px) {
      .name-title {
        text-align: left;
      }
    }
    
    .name {
      font-size: 1.875rem;
      font-weight: 300;
      letter-spacing: 0.025em;
      margin-bottom: 0.25rem;
      color: #111827;
    }
    
    .job-title {
      font-size: 1.125rem;
      color: #6b7280;
      font-weight: 300;
      letter-spacing: 0.025em;
    }
    
    /* Contact section */
    .contact-info {
      text-align: right;
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .contact-item {
      margin-bottom: 0.125rem;
    }
    
    /* Divider */
    .divider {
      height: 0.4px; /* No change needed - already 1px */
      width: 4rem;
      margin: 0.1rem auto; /* Reduced from 0.75rem */
      background-color: {{themeColorLight}}; /* Changed from themeColor to themeColorLight for lighter appearance */
    }
    
    /* Social links */
    .social-links {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 0.5rem; /* Reduced from 0.75rem */
    }
    
    .social-link {
      color: #9ca3af;
      transition: color 0.2s;
    }
    
    .social-link:hover {
      color: #4b5563;
    }
    
    .social-icon {
      width: 1.25rem;
      height: 1.25rem;
      fill: currentColor;
    }
    
    .social-icon-outline {
      width: 1.25rem;
      height: 1.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Summary */
    .summary {
      margin-bottom: 0.3rem; /* Reduced from 0.5rem */
    }
    
    .summary-text {
      font-size: 0.875rem;
      text-align: center;
      color: #4b5563;
      line-height: 1.5; /* Slightly reduced from 1.625 */
      max-width: 48rem;
      margin: 0 auto;
    }
    
    /* Main content */
    .main-content {
      padding: 1.2rem; /* Reduced from 1.5rem */
    }
    
    .main-container {
      max-width: 56rem;
      margin-left: auto;
      margin-right: auto;
    }
    
    /* Grid layout */
    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    @media (min-width: 768px) {
      .grid {
        grid-template-columns: 1fr 2fr;
      }
    }
    
    /* Sections */
    .section {
      margin-bottom: 1.2rem; /* Reduced from 1.5rem */
    }
    
    .section-title {
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 500;
      margin-bottom: 0.8rem; /* Reduced from 1rem */
      padding-bottom: 0.2rem; /* Reduced from 0.25rem */
      border-bottom: 1px solid {{themeColorLight}};
      color: {{themeColor}};
    }
    
    /* Skills */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem; /* Reduced from 0.5rem */
    }
    
    .skill-tag {
      padding: 0.2rem 0.6rem; /* Reduced from 0.25rem 0.75rem */
      font-size: 0.75rem;
      border-radius: 0.375rem;
      border: 0.5px solid {{themeColorLight}}; /* Changed from 1px and themeColorMedium to 0.5px and themeColorLight */
      color: #4b5563;
    }
    
    /* Education items */
    .education-item {
      margin-bottom: 0.5rem;
    }
    
    .education-title {
      font-size: 0.875rem;
      font-weight: 500;
      color: #1f2937;
      margin: 0;
    }
    
    .education-school {
      font-size: 0.75rem;
      color: #4b5563;
      margin: 0.125rem 0;
    }
    
    .education-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .education-grade {
      font-size: 0.75rem;
      color: #4b5563;
      font-style: italic;
      margin-top: 0.125rem;
    }
    
    .education-description {
      font-size: 0.75rem;
      color: #4b5563;
      margin-top: 0.25rem;
    }
    
    /* Certification items */
    .certification-item {
      margin-bottom: 0.75rem;
    }
    
    .certification-title {
      font-size: 0.875rem;
      font-weight: 500;
      color: #1f2937;
      margin: 0;
    }
    
    .certification-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0.25rem 0;
    }
    
    .certification-issuer {
      font-size: 0.75rem;
      color: #4b5563;
    }
    
    .certification-link {
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: underline;
      margin-left: 0.5rem;
    }
    
    .certification-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    /* Experience items */
    .experience-item {
      margin-bottom: 0.5rem;
    }
    
    .experience-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 0.25rem;
    }
    
    .experience-title {
      font-size: 1rem;
      font-weight: 500;
      color: #1f2937;
      margin: 0;
    }
    
    .experience-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .experience-company {
      font-size: 0.875rem;
      color: #4b5563;
      margin-bottom: 0.5rem;
      font-style: italic;
    }
    
    .experience-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* Project items */
    .project-item {
      margin-bottom: 0.5rem;
    }
    
    .project-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.25rem;
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: 500;
      color: #1f2937;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 0.75rem;
      font-size: 0.75rem;
    }
    
    .project-link {
      color: {{themeColor}};
      text-decoration: underline;
    }
    
    .project-tech {
      font-size: 0.75rem;
      color: #6b7280;
      margin-bottom: 0.25rem;
      font-style: italic;
    }
    
    .project-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    @media print {
      .resume {
        box-shadow: none;
        border-radius: 0;
      }
      
      .section, .experience-item, .project-item, .certification-item, .education-item {
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header with simple elegant design -->
    <div class="header">
      <div class="header-container">
        <!-- Name and title -->
        <div class="header-content">
          <div class="name-title">
            <h1 class="name">{{firstName}} {{lastName}}</h1>
            {{#if jobTitle}}
              <h2 class="job-title">{{jobTitle}}</h2>
            {{/if}}
          </div>
          
          <!-- Contact info in right column -->
          <div class="contact-info">
            {{#if email}}
              <div class="contact-item">{{email}}</div>
            {{/if}}
            
            {{#if phone}}
              <div class="contact-item">{{phone}}</div>
            {{/if}}
            
            {{#if address}}
              <div class="contact-item">{{address}}</div>
            {{/if}}
          </div>
        </div>
        
        <!-- Horizontal divider with accent color -->
        <div class="divider"></div>
        
        <!-- Social links centered -->
        <div class="social-links">
          {{#if linkedinUrl}}
            <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
              <svg class="social-icon" viewBox="0 0 24 24">
                <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
              </svg>
            </a>
          {{/if}}
          
          {{#if githubUrl}}
            <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
              <svg class="social-icon" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
          {{/if}}
          
          {{#if portfolioUrl}}
            <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
              <svg class="social-icon-outline" viewBox="0 0 24 24">
                <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
            </a>
          {{/if}}
        </div>
        
        <!-- Summary -->
        {{#if summary}}
          <div class="summary">
            <p class="summary-text">{{summary}}</p>
          </div>
        {{/if}}
      </div>
    </div>
    
    <!-- Main content -->
    <div class="main-content">
      <div class="main-container">
        <div class="grid">
          <!-- Left column - Skills & Education -->
          <div class="left-column">
            <!-- Skills -->
            {{#if skills.length}}
              <div class="section">
                <h3 class="section-title">Skills</h3>
                
                <div class="skills-container">
                  {{#each skills}}
                    <span class="skill-tag">{{this.name}}</span>
                  {{/each}}
                </div>
              </div>
            {{/if}}
            
            <!-- Education -->
            {{#if education.length}}
              <div class="section">
                <h3 class="section-title">Education</h3>
                
                <div class="education-content">
                  {{#each education}}
                    <div class="education-item">
                      <h4 class="education-title">
                        {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                      </h4>
                      
                      <div class="education-school">{{this.universityName}}</div>
                      
                      <div class="education-date">
                        {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                      </div>
                      
                      {{#if this.grade}}
                        <div class="education-grade">{{this.gradeType}}: {{this.grade}}</div>
                      {{/if}}
                      
                      {{#if this.description}}
                        <p class="education-description">{{this.description}}</p>
                      {{/if}}
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/if}}
            
            <!-- Certifications -->
            {{#if certifications.length}}
              <div class="section">
                <h3 class="section-title">Certifications</h3>
                
                <div class="certifications-content">
                  {{#each certifications}}
                    <div class="certification-item">
                      <h4 class="certification-title">{{this.name}}</h4>
                      
                      <div class="certification-meta">
                        <span class="certification-issuer">{{this.issuer}}</span>
                        
                        {{#if this.credentialLink}}
                          <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="certification-link">
                            View
                          </a>
                        {{/if}}
                      </div>
                      
                      {{#if this.date}}
                        <div class="certification-date">{{this.date}}</div>
                      {{/if}}
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/if}}
          </div>
          
          <!-- Right column - Experience & Projects -->
          <div class="right-column">
            <!-- Experience -->
            {{#if experience.length}}
              <div class="section">
                <h3 class="section-title">Experience</h3>
                
                <div class="experience-content">
                  {{#each experience}}
                    <div class="experience-item">
                      <div class="experience-header">
                        <h4 class="experience-title">{{this.title}}</h4>
                        <span class="experience-date">
                          {{this.startDate}}{{#if this.startDate}}{{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}{{/if}}
                        </span>
                      </div>
                      
                      <div class="experience-company">
                        {{this.companyName}}
                        {{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                        {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                      </div>
                      
                      <div class="experience-description">{{{this.workSummary}}}</div>
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/if}}
            
            <!-- Projects -->
            {{#if projects.length}}
              <div class="section">
                <h3 class="section-title">Projects</h3>
                
                <div class="projects-content">
                  {{#each projects}}
                    <div class="project-item">
                      <div class="project-header">
                        <h4 class="project-title">{{this.projectName}}</h4>
                        
                        <div class="project-links">
                          {{#if this.githubLink}}
                            <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                              GitHub
                            </a>
                          {{/if}}
                          
                          {{#if this.deployedLink}}
                            <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                              Live Demo
                            </a>
                          {{/if}}
                        </div>
                      </div>
                      
                      {{#if this.techStack}}
                        <p class="project-tech">{{this.techStack}}</p>
                      {{/if}}
                      
                      <div class="project-description">{{{this.projectSummary}}}</div>
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>