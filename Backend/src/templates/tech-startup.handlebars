<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}} - Resume</title>
  <style>
    /* Base Styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      overflow: hidden;
    }
    
    /* Header with clean design */
    .header {
      padding: 0.5rem 1rem;
      border-bottom: 1px solid {{themeColorTransparent10}};
    }
    
    .header-content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      gap: 0.75rem;
    }
    
    @media (min-width: 768px) {
      .header-content {
        flex-direction: row;
      }
    }
    
    .header-left {
      flex-grow: 1;
    }
    
    .name {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.25rem;
      color: {{themeColor}};
    }
    
    .job-title {
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
      color: #6b7280;
    }
    
    .summary {
      max-width: 36rem;
      margin-top: 0.25rem;
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    /* Contact info in a clean box */
    .contact-box {
      padding: 0.75rem;
      border-radius: 0.25rem;
      background-color: #f9fafb;
    }
    
    .contact-info {
      font-size: 0.875rem;
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .contact-icon {
      width: 1rem;
      height: 1rem;
      color: {{themeColor}};
    }
    
    /* Social profiles with icons and full URLs */
    .social-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      word-break: break-all;
      color: {{themeColor}};
    }
    
    .social-icon {
      flex-shrink: 0;
      width: 1rem;
      height: 1rem;
      color: {{themeColor}};
    }
    
    /* Main content sections */
    .main-content {
      padding: 0.75rem;
    }
    
    .section {
      margin-bottom: 0.75rem;
    }
    
    .section-title {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0.25rem;
      padding-bottom: 0.25rem;
      border-bottom: 1px solid {{themeColorTransparent10}};
      color: {{themeColor}};
    }
    
    /* Skills Section */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    
    .skill-tag {
      background-color: white;
      border: 1px solid {{themeColorTransparent20}};
      color: {{themeColor}};
      font-weight: 500;
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
      border-radius: 0.25rem;
    }
    
    /* Experience with cleaner timeline */
    .experience-container {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .experience-item {
      border-left: 2px solid {{themeColor}};
      padding-left: 0.75rem;
      padding-bottom: 0.25rem;
    }
    
    .experience-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin-bottom: 0.25rem;
    }
    
    .experience-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .experience-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .experience-company {
      font-size: 0.875rem;
      color: #6b7280;
      margin-bottom: 0.25rem;
    }
    
    /* Projects Section with Single Column Layout */
    .projects-container {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .project-item {
      border-left: 2px solid {{themeColor}};
      padding-left: 0.75rem;
      padding-bottom: 0.25rem;
    }
    
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin-bottom: 0.25rem;
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 0.5rem;
    }
    
    .project-link {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      color: #6b7280;
      text-decoration: none;
    }
    
    .project-link:hover {
      color: {{themeColor}};
    }
    
    .project-link-icon {
      width: 0.75rem;
      height: 0.75rem;
    }
    
    .project-tech {
      font-size: 0.7rem;
      color: #6b7280;
      margin-bottom: 0.25rem;
    }

    .project-description {
      font-size: 0.75rem;
      color: #4b5563;
    }
    
    /* Education Section with Single Column Layout */
    .education-container {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .education-item {
      border-left: 2px solid {{themeColor}};
      padding-left: 0.75rem;
    }
    
    .education-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin-bottom: 0; /* FIX: Removed bottom margin */
    }
    
    .education-degree {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .education-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .education-university {
      font-size: 0.875rem;
      color: #6b7280;
      margin: 0; /* FIX: Removed all margins */
    }
    
    .education-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .education-grade {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .education-description {
      font-size: 0.75rem;
      color: #6b7280;
      margin-top: 0.25rem;
    }
    
    /* Certifications Section */
    .certifications-container {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .certification-item {
      border-left: 2px solid {{themeColor}};
      padding-left: 0.75rem;
      padding-bottom: 0.25rem;
    }
    
    .certification-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin-bottom: 0.25rem;
    }
    
    .certification-title {
      font-size: 1rem;
      font-weight: 500;
      margin: 0;
    }
    
    .certification-date {
      font-size: 0.75rem;
      color: #6b7280;
    }
    
    .certification-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .certification-issuer {
      font-size: 0.875rem;
      color: #6b7280;
      margin: 0;
    }
    
    .certification-link {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .certification-link:hover {
      text-decoration: underline;
    }
    
    .certification-link-icon {
      width: 0.75rem;
      height: 0.75rem;
    }
    
    /* Additional Sections */
    .additional-section-container {
      margin-bottom: 0.75rem;
    }
    
    .additional-section-content {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .additional-section-content ul {
      padding-left: 1.5rem;
    }
    
    .additional-section-content li {
      margin-bottom: 0.25rem;
    }
    
    @media print {
      .resume {
        box-shadow: none;
      }
      
      .experience-item, .project-item, .education-item, .certification-item {
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header with clean design -->
    <div class="header">
      <div class="header-content">
        <div class="header-left">
          <h1 class="name">{{firstName}} {{lastName}}</h1>
          {{#if jobTitle}}
            <h2 class="job-title">{{jobTitle}}</h2>
          {{/if}}
          
          {{#if summary}}
            <div class="summary">{{summary}}</div>
          {{/if}}
        </div>
        
        <!-- Contact info in a clean box -->
        <div class="contact-box">
          <div class="contact-info">
            {{#if email}}
              <div class="contact-item">
                <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>{{email}}</span>
              </div>
            {{/if}}
            
            {{#if phone}}
              <div class="contact-item">
                <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>{{phone}}</span>
              </div>
            {{/if}}
            
            {{#if address}}
              <div class="contact-item">
                <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{{address}}</span>
              </div>
            {{/if}}
            
            <!-- Social profiles with icons and full URLs -->
            {{#if githubUrl}}
              <div class="social-item">
                <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <a href="{{formatUrl githubUrl}}">{{formatUrl githubUrl}}</a>
              </div>
            {{/if}}
            
            {{#if linkedinUrl}}
              <div class="social-item">
                <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
                </svg>
                <a href="{{formatUrl linkedinUrl}}">{{formatUrl linkedinUrl}}</a>
              </div>
            {{/if}}
            
            {{#if portfolioUrl}}
              <div class="social-item">
                <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                <a href="{{formatUrl portfolioUrl}}">{{formatUrl portfolioUrl}}</a>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main content -->
    <div class="main-content">
      <!-- Skills as simple tags -->
      {{#if skills.length}}
        <div class="section">
          <h3 class="section-title">Skills</h3>
          
          <div class="skills-container">
            {{#each skills}}
              <div class="skill-tag">{{this.name}}</div>
            {{/each}}
          </div>
        </div>
      {{/if}}
      
      <!-- Experience with cleaner timeline -->
      {{#if experience.length}}
        <div class="section">
          <h3 class="section-title">Experience</h3>
          
          <div class="experience-container">
            {{#each experience}}
              <div class="experience-item">
                <div class="experience-header">
                  <h4 class="experience-title">{{this.title}}</h4>
                  <span class="experience-date">
                    {{this.startDate}}{{#if this.startDate}}{{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}{{/if}}
                  </span>
                </div>
                
                <h5 class="experience-company">
                  {{this.companyName}}
                  {{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                  {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                </h5>
                
                <div>{{{this.workSummary}}}</div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
      
      <!-- Projects Section with Single Column Layout -->
      {{#if projects.length}}
        <div class="section">
          <h3 class="section-title">Projects</h3>
          
          <div class="projects-container">
            {{#each projects}}
              <div class="project-item">
                <div class="project-header">
                  <h4 class="project-title">{{this.projectName}}</h4>
                  <div class="project-links">
                    {{#if this.githubLink}}
                      <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                        <svg class="project-link-icon" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        Code
                      </a>
                    {{/if}}
                    
                    {{#if this.deployedLink}}
                      <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                        <svg class="project-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                        Live Demo
                      </a>
                    {{/if}}
                  </div>
                </div>
                
                {{#if this.techStack}}
                  <div class="project-tech">
                    <span class="tech-label">Tech Stack:</span> {{this.techStack}}
                  </div>
                {{/if}}
                
                <div class="project-description">{{{this.projectSummary}}}</div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
      
      <!-- Education Section with Single Column Layout -->
      {{#if education.length}}
        <div class="section">
          <h3 class="section-title">Education</h3>
          
          <div class="education-container">
            {{#each education}}
              <div class="education-item">
                <div class="education-header">
                  <h4 class="education-degree">
                    {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                  </h4>
                  <span class="education-date">
                    {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{/if}}{{/if}}
                    {{this.endDate}}
                  </span>
                </div>
                
                <div class="education-details">
                  <h5 class="education-university">{{this.universityName}}</h5>
                  
                  {{#if this.grade}}
                    <div class="education-grade">
                      {{this.gradeType}}: {{this.grade}}
                    </div>
                  {{/if}}
                </div>
                
                {{#if this.description}}
                  <p class="education-description">{{this.description}}</p>
                {{/if}}
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
      
      <!-- Certifications Section -->
      {{#if certifications.length}}
        <div class="section">
          <h3 class="section-title">Certifications</h3>
          
          <div class="certifications-container">
            {{#each certifications}}
              <div class="certification-item">
                <div class="certification-header">
                  <h4 class="certification-title">{{this.name}}</h4>
                  {{#if this.date}}
                    <span class="certification-date">{{this.date}}</span>
                  {{/if}}
                </div>
                
                <div class="certification-details">
                  <h5 class="certification-issuer">{{this.issuer}}</h5>
                  
                  {{#if this.credentialLink}}
                    <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="certification-link">
                      <svg class="certification-link-icon" viewBox="0 0 24 24">
                        <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                        <path d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                      </svg>
                      View
                    </a>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
      
      <!-- Additional Sections -->
      {{#if additionalSections.length}}
        {{#each additionalSections}}
          <div class="additional-section-container">
            <h3 class="section-title">{{this.title}}</h3>
            <div class="additional-section-content">{{{this.content}}}</div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</body>
</html>