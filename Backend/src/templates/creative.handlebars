<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      border-radius: 6px;
      overflow: hidden;
    }
    
    /* Header section with artistic gradient */
    .header {
      position: relative;
    }
    
    .gradient-band {
      height: 7rem;
      width: 100%;
      background: linear-gradient(135deg, {{themeColor}} 0%, {{themeColorTransparent80}} 60%, {{themeColorTransparent50}} 100%);
      position: relative;
    }
    
    .decoration-circle-1 {
      position: absolute;
      top: 1.5rem;
      right: 2rem;
      width: 4rem;
      height: 4rem;
      border-radius: 9999px;
      background-color: {{themeColorTransparent20}};
    }
    
    .decoration-circle-2 {
      position: absolute;
      top: 2.5rem;
      right: 5rem;
      width: 2rem;
      height: 2rem;
      border-radius: 9999px;
      background-color: {{themeColorTransparent10}};
    }
    
    .decoration-pill {
      position: absolute;
      bottom: 0.5rem;
      left: 2.5rem;
      width: 5rem;
      height: 0.75rem;
      border-radius: 9999px;
      background-color: {{themeColorTransparent10}};
    }
    
    /* Profile section */
    .profile-container {
      position: absolute;
      bottom: -4rem;
      left: 1.5rem;
      right: 1.5rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: white;
      border-radius: 0.75rem;
      padding: 1rem 1.5rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    
    @media (min-width: 768px) {
      .profile-container {
        flex-direction: row;
      }
    }
    
    .profile-photo {
      width: 5rem;
      height: 5rem;
      border-radius: 9999px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.25rem;
      font-weight: bold;
      margin-top: -2.5rem;
      margin-bottom: 0.5rem;
      background-color: {{themeColor}};
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    @media (min-width: 768px) {
      .profile-photo {
        margin-top: 0;
        margin-bottom: 0;
      }
    }
    
    .profile-details {
      margin-left: 0;
      text-align: center;
      flex-grow: 1;
    }
    
    @media (min-width: 768px) {
      .profile-details {
        margin-left: 1.5rem;
        text-align: left;
      }
    }
    
    .profile-name {
      font-size: 1.5rem;
      font-weight: bold;
      letter-spacing: -0.025em;
      margin: 0;
    }
    
    .profile-title {
      font-size: 1.125rem;
      color: {{themeColor}};
      font-weight: 300;
      margin: 0;
    }
    
    .contact-badges {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.25rem;
      margin-top: 0.5rem;
    }
    
    @media (min-width: 768px) {
      .contact-badges {
        justify-content: flex-end;
        margin-top: 0;
      }
    }
    
    .contact-badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      display: flex;
      align-items: center;
      background-color: {{themeColorTransparent10}};
    }
    
    .badge-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
      stroke: {{themeColor}};
      fill: none;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Main content */
    .main-content {
      margin-top: 5rem;
      padding: 0 1.5rem 1rem 1.5rem;
    }
    
    /* Social links */
    .social-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.75rem;
      margin-bottom: 0.6rem;
    }
    
    .social-link {
      display: flex;
      align-items: center;
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .social-link:hover {
      text-decoration: underline;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.25rem;
      fill: currentColor;
    }
    
    .social-icon-outline {
      width: 1rem;
      height: 1rem;
      margin-right: 0.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Summary section */
    .summary {
      margin-bottom: 0.6rem;
      padding-left: 1rem;
      position: relative;
    }
    
    .summary-border {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 0.125rem;
      background-color: {{themeColor}};
    }
    
    .summary-text {
      font-size: 0.875rem;
      line-height: 1.625;
      color: #4b5563;
      font-style: italic;
    }
    
    /* Grid layout */
    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.6rem;
    }
    
    @media (min-width: 768px) {
      .grid {
        grid-template-columns: 3fr 2fr;
      }
    }
    
    /* Section styling */
    .section {
      margin-bottom: 0.6rem;
    }
    
    .section-title {
      font-size: 1.125rem;
      font-weight: bold;
      margin-bottom: 0.3rem;
      padding-bottom: 0.25rem;
      display: inline-block;
      color: {{themeColor}};
      border-bottom: 2px solid {{themeColor}};
    }
    
    .section-content-item {
      padding: 0.25rem;
      border-radius: 0.375rem;
      margin-bottom: 0.05rem;
      background-color: {{themeColorTransparent05}};
    }
    
    .item-header {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: 0.1rem;
    }
    
    .item-title {
      font-size: 1rem;
      font-weight: bold;
      color: {{themeColor}};
      margin: 0;
    }
    
    .item-date-badge {
      font-size: 0.75rem;
      background-color: white;
      padding: 0 0.5rem;
      border-radius: 9999px;
      color: {{themeColor}};
      border: 1px solid {{themeColorTransparent20}};
      display: inline-block;
    }
    
    .item-subtitle {
      font-size: 0.875rem;
      font-weight: 500;
      margin: 0 0 0.15rem 0;
    }
    
    .item-location {
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 0.15rem;
    }
    
    .item-description {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* Projects links */
    .project-links {
      display: flex;
      gap: 0.25rem;
    }
    
    .project-link {
      font-size: 0.75rem;
      padding: 0 0.5rem;
      border-radius: 9999px;
      display: flex;
      align-items: center;
      background-color: white;
      color: {{themeColor}};
      text-decoration: none;
      border: 1px solid {{themeColorTransparent20}};
    }
    
    .project-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
    }
    
    .tech-stack {
      font-size: 0.75rem;
      margin: 0.15rem 0;
    }
    
    .tech-label {
      font-weight: 600;
      color: {{themeColor}};
    }
    
    /* Skills */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.15rem;
    }
    
    .skill-pill {
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      margin-bottom: 0.15rem;
    }
    
    .skill-pill-solid {
      background-color: {{themeColor}};
      color: white;
    }
    
    .skill-pill-outline {
      background-color: white;
      color: {{themeColor}};
      border: 1px solid {{themeColor}};
    }
    
    /* Certifications */
    .cert-badge {
      font-size: 0.75rem;
      padding: 0 0.5rem;
      border-radius: 0.375rem;
      background-color: {{themeColorTransparent10}};
      color: {{themeColor}};
    }
    
    .cert-link {
      font-size: 0.75rem;
      display: inline-flex;
      align-items: center;
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .cert-link:hover {
      text-decoration: underline;
    }
    
    .cert-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Education */
    .grade-badge {
      font-size: 0.75rem;
      padding: 0 0.5rem;
      border-radius: 9999px;
      background-color: white;
      color: {{themeColor}};
      border: 1px solid {{themeColorTransparent20}};
    }
    
    @media print {
      .resume {
        box-shadow: none;
        border-radius: 0;
      }
      
      .section-content-item {
        page-break-inside: avoid;
      }
      
      .profile-container {
        box-shadow: none;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Artistic header design -->
    <div class="header">
      <!-- Background gradient band -->
      <div class="gradient-band">
        <!-- Decorative elements -->
        <div class="decoration-circle-1"></div>
        <div class="decoration-circle-2"></div>
        <div class="decoration-pill"></div>
      </div>
      
      <!-- Profile content - overlapping design -->
      <div class="profile-container">
        <!-- Profile photo placeholder - circle with user's initials -->
        <div class="profile-photo">
          {{firstChar firstName}}{{firstChar lastName}}
        </div>
        
        <!-- Name and title -->
        <div class="profile-details">
          <h1 class="profile-name">{{firstName}} {{lastName}}</h1>
          {{#if jobTitle}}
            <h2 class="profile-title">{{jobTitle}}</h2>
          {{/if}}
        </div>
        
        <!-- Contact info badges -->
        <div class="contact-badges">
          {{#if email}}
            <div class="contact-badge">
              <svg class="badge-icon" viewBox="0 0 24 24">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{{email}}</span>
            </div>
          {{/if}}
          
          {{#if phone}}
            <div class="contact-badge">
              <svg class="badge-icon" viewBox="0 0 24 24">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{{phone}}</span>
            </div>
          {{/if}}
          
          {{#if address}}
            <div class="contact-badge">
              <svg class="badge-icon" viewBox="0 0 24 24">
                <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{{address}}</span>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
    
    <!-- Main content with margin to account for overlapping header -->
    <div class="main-content">
      <!-- Social links row -->
      <div class="social-links">
        {{#if linkedinUrl}}
          <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24">
              <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
            </svg>
            LinkedIn
          </a>
        {{/if}}
        
        {{#if githubUrl}}
          <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        {{/if}}
        
        {{#if portfolioUrl}}
          <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon-outline" viewBox="0 0 24 24">
              <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            Portfolio
          </a>
        {{/if}}
      </div>
      
      <!-- Summary Section with artistic border -->
      {{#if summary}}
        <div class="summary">
          <div class="summary-border"></div>
          <p class="summary-text">"{{summary}}"</p>
        </div>
      {{/if}}
      
      <!-- Main two-column layout -->
      <div class="grid">
        <!-- Left column - Experience and Projects -->
        <div>
          <!-- Experience Section -->
          {{#if experience.length}}
            <div class="section">
              <h3 class="section-title">EXPERIENCE</h3>
              
              <div>
                {{#each experience}}
                  <div class="section-content-item">
                    <div class="item-header">
                      <h4 class="item-title">{{this.title}}</h4>
                      <span class="item-date-badge">
                        {{this.startDate}}
                        {{#if this.startDate}}
                          {{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                        {{/if}}
                      </span>
                    </div>
                    
                    <div class="item-location">
                      {{this.companyName}}
                      {{#if this.city}}{{#if this.companyName}} | {{/if}}{{this.city}}{{/if}}
                      {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                    </div>
                    
                    <div class="item-description">{{{this.workSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Projects Section -->
          {{#if projects.length}}
            <div class="section">
              <h3 class="section-title">PROJECTS</h3>
              
              <div>
                {{#each projects}}
                  <div class="section-content-item">
                    <div class="item-header">
                      <h4 class="item-title">{{this.projectName}}</h4>
                      <div class="project-links">
                        {{#if this.githubLink}}
                          <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                            <svg class="project-link-icon" viewBox="0 0 24 24" fill="currentColor">
                              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            Code
                          </a>
                        {{/if}}
                        {{#if this.deployedLink}}
                          <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                            <svg class="project-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            Demo
                          </a>
                        {{/if}}
                      </div>
                    </div>
                    
                    {{#if this.techStack}}
                      <p class="tech-stack">
                        <span class="tech-label">Technologies:</span> {{this.techStack}}
                      </p>
                    {{/if}}
                    
                    <div class="item-description">{{{this.projectSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Certifications Section -->
          {{#if certifications.length}}
            <div class="section">
              <h3 class="section-title">CERTIFICATIONS</h3>
              <div>
                {{#each certifications}}
                  <div class="section-content-item">
                    <!-- First row: Name and Date -->
                    <div class="item-header">
                      <h4 class="item-title">{{this.name}}</h4>
                      {{#if this.date}}
                        <span class="cert-badge">{{this.date}}</span>
                      {{/if}}
                    </div>
                    
                    <!-- Second row: Issuer and View link -->
                    <div class="item-header">
                      <h5 class="item-subtitle">{{this.issuer}}</h5>
                      {{#if this.credentialLink}}
                        <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="cert-link">
                          <svg class="cert-icon" viewBox="0 0 24 24">
                            <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                            <path d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                          </svg>
                          View
                        </a>
                      {{/if}}
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
        
        <!-- Right column - Education and Skills -->
        <div>
          <!-- Education Section -->
          {{#if education.length}}
            <div class="section">
              <h3 class="section-title">EDUCATION</h3>
              
              <div>
                {{#each education}}
                  <div class="section-content-item">
                    <h4 class="item-title">
                      {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                    </h4>
                    <h5 class="item-subtitle">{{this.universityName}}</h5>
                    
                    <div class="item-header">
                      <span class="item-date-badge">
                        {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                      </span>
                      {{#if this.grade}}
                        <span class="grade-badge">
                          {{this.gradeType}}: {{this.grade}}
                        </span>
                      {{/if}}
                    </div>
                    
                    {{#if this.description}}
                      <p class="item-description">{{this.description}}</p>
                    {{/if}}
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Skills Section with artistic pills -->
          {{#if skills.length}}
            <div class="section">
              <h3 class="section-title">SKILLS</h3>
              
              <div class="skills-container">
                {{#each skills}}
                  <span class="skill-pill {{#if_even @index}}skill-pill-solid{{else}}skill-pill-outline{{/if_even}}">
                    {{this.name}}
                  </span>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</body>
</html>