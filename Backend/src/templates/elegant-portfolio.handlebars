<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      border-radius: 0.375rem;
      overflow: hidden;
    }
    
    /* Header section - REDUCED SPACING */
    .header {
      padding: 1.2rem 1.5rem; /* Reduced from 1.5rem top/bottom */
      border-bottom: 1px solid #e5e7eb;
    }
    
    .header-container {
      max-width: 56rem;
      margin-left: auto;
      margin-right: auto;
    }
    
    .header-content {
      display: flex;
      flex-direction: column;
      gap: 0.8rem; /* Reduced from 1rem */
      align-items: center;
    }
    
    @media (min-width: 768px) {
      .header-content {
        flex-direction: row;
        align-items: flex-end;
      }
    }
    
    .name-title {
      text-align: center;
      flex-grow: 1;
      margin-top: 0; /* Removed top margin */
    }
    
    @media (min-width: 768px) {
      .name-title {
        text-align: left;
      }
    }
    
    .name {
      font-size: 2rem;
      font-weight: 500;
      letter-spacing: 0.025em;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
      margin-top: 0; /* Removed top margin */
      color: {{themeColor}};
    }
    
    .job-title {
      font-size: 1.125rem;
      color: #4b5563;
      text-transform: uppercase;
      letter-spacing: 0.025em;
      font-weight: 500;
      margin: 0;
    }
    
    /* Contact section - REDUCED SPACING */
    .contact-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 0.875rem;
      gap: 0.15rem; /* Reduced from 0.25rem */
      color: #4b5563;
    }
    
    @media (min-width: 768px) {
      .contact-info {
        align-items: flex-end;
      }
    }
    
    .contact-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .contact-icon {
      width: 1rem;
      height: 1rem;
      fill: none;
      stroke: {{themeColor}};
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    .social-links {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-top: 0.15rem; /* Reduced from 0.25rem */
    }
    
    .social-link {
      color: {{themeColor}};
      text-decoration: none;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
      fill: currentColor;
    }
    
    .social-icon-outline {
      width: 1rem;
      height: 1rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Main content - REDUCED SPACING */
    .main-content {
      max-width: 56rem;
      margin-left: auto;
      margin-right: auto;
      padding: 0.6rem 1.5rem; /* Reduced from 1rem top/bottom */
    }
    
    /* Summary - REDUCED SPACING */
    .summary {
      margin-bottom: 0.6rem; /* Reduced from 1rem */
      margin-top: 0; /* Removed top margin */
    }
    
    .summary-text {
      font-size: 0.95rem;
      text-align: center;
      color: #4b5563;
      margin: 0; /* Removed margins */
    }
    
    /* Grid layout - REDUCED SPACING */
    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.8rem; /* Reduced from 1rem */
    }
    
    @media (min-width: 768px) {
      .grid {
        grid-template-columns: 8fr 4fr;
      }
    }
    
    /* Sections - REDUCED SPACING */
    .section {
      margin-bottom: 0.7rem; /* Reduced from 1rem */
    }
    
    .section-title {
      font-size: 1.125rem;
      text-transform: uppercase;
      letter-spacing: 0.025em;
      font-weight: 500;
      margin-bottom: 0.3rem; /* Reduced from 0.5rem */
      padding-bottom: 0.15rem; /* Reduced from 0.25rem */
      border-bottom: 1px solid #e5e7eb;
      color: {{themeColor}};
      margin-top: 0;
    }
    
    .section-content {
      display: flex;
      flex-direction: column;
      gap: 0.5rem; /* Reduced from 0.75rem */
    }
    
    /* Experience items - REDUCED SPACING */
    .experience-item {
      margin-bottom: 0.5rem; /* Reduced from 0.75rem */
    }
    
    .experience-header {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
    }
    
    @media (min-width: 768px) {
      .experience-header {
        flex-direction: row;
        align-items: baseline;
      }
    }
    
    .experience-title {
      font-size: 1rem;
      font-weight: 500;
      color: {{themeColor}};
      margin: 0;
    }
    
    .experience-date {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .experience-company {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
      margin-top: 0;
    }
    
    .experience-description {
      font-size: 0.875rem;
      color: #4b5563;
      line-height: 1.5; /* Reduced from 1.625 */
      margin-top: 0;
    }
    
    /* Project items - REDUCED SPACING */
    .project-item {
      margin-bottom: 0.5rem; /* Reduced from 0.75rem */
    }
    
    .project-header {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
    }
    
    @media (min-width: 768px) {
      .project-header {
        flex-direction: row;
        align-items: baseline;
      }
    }
    
    .project-title {
      font-size: 1rem;
      font-weight: 500;
      color: {{themeColor}};
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 0.6rem; /* Reduced from 0.75rem */
    }
    
    .project-link {
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: underline;
    }
    
    .project-tech {
      font-size: 0.75rem;
      color: #6b7280;
      margin-bottom: 0.15rem; /* Reduced from 0.25rem */
      margin-top: 0;
    }
    
    .project-description {
      font-size: 0.875rem;
      color: #4b5563;
      line-height: 1.5; /* Reduced from 1.625 */
      margin-top: 0;
    }
    
    /* Certification items - REDUCED SPACING */
    .certification-item {
      margin-bottom: 0.3rem; /* Reduced from 0.5rem */
    }
    
    .certification-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.1rem; /* Added to reduce space */
    }
    
    .certification-title {
      font-size: 1rem;
      font-weight: 500;
      color: {{themeColor}};
      margin: 0;
    }
    
    .certification-date {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .certification-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .certification-issuer {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0;
    }
    
    .certification-link {
      font-size: 0.75rem;
      color: {{themeColor}};
      text-decoration: underline;
      display: inline-flex;
      align-items: center;
    }
    
    .certification-link-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Education items - REDUCED SPACING */
    .education-item {
      margin-bottom: 0.3rem; /* Reduced from 0.5rem */
    }
    
    .education-title {
      font-size: 1rem;
      font-weight: 500;
      color: {{themeColor}};
      margin: 0 0 0.15rem 0; /* Reduced from 0.25rem */
    }
    
    .education-school {
      font-size: 0.875rem;
      font-weight: 500;
      color: #4b5563;
      margin: 0 0 0.15rem 0; /* Reduced from 0.25rem */
    }
    
    .education-date {
      font-size: 0.875rem;
      color: #6b7280;
      margin: 0 0 0.15rem 0; /* Reduced from 0.25rem */
    }
    
    .education-grade {
      font-size: 0.75rem;
      color: #4b5563;
      margin: 0;
    }
    
    /* Skills - REDUCED SPACING */
    .skills-container {
      display: flex;
      flex-direction: column;
      gap: 0.1rem; /* Reduced from 0.125rem */
    }
    
    .skill-item {
      display: flex;
      align-items: center;
      gap: 0.4rem; /* Reduced from 0.5rem */
    }
    
    .skill-name {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    /* START: Added Additional Section Styles */
    .additional-content {
      font-size: 0.875rem;
      line-height: 1.5;
      color: #4b5563;
    }

    .additional-content ul {
      padding-left: 1rem;
      margin: 0.25rem 0;
    }

    .additional-content li {
      list-style-type: disc;
      margin-bottom: 0.1rem;
    }
    /* END: Added Additional Section Styles */
    
    /* Footer - REDUCED SPACING */
    .footer {
      padding: 0.4rem 1.5rem; /* Reduced from 0.5rem top/bottom */
    }
    
    .footer-divider {
      max-width: 16rem;
      margin-left: auto;
      margin-right: auto;
      height: 1px;
      background-color: #e5e7eb;
    }
    
    @media print {
  .resume {
    box-shadow: none;
    border-radius: 0;
  }
  
  .experience-item, .project-item, .certification-item, .education-item {
    page-break-inside: avoid;
  }

  /* NEW: Disable grid for printing to allow natural page breaks */
  .main-content {
    display: block;
  }

  /* NEW: Recreate the two-column layout using a print-friendly method */
  .left-column, .right-column {
    display: inline-block;
    vertical-align: top;
    page-break-inside: avoid; /* Prevent a column from being split */
  }

  /* Your original grid was 8fr and 4fr, which is a 2:1 ratio (66.6% / 33.3%) */
  .left-column {
    width: 66%;
    padding-right: 1.25rem; /* Re-create the gap between columns */
    box-sizing: border-box;
  }

  .right-column {
    width: 33%;
    box-sizing: border-box;
  }
}
  </style>
</head>
<body>
  <div class="resume">
    <!-- Simplified header -->
    <div class="header">
      <div class="header-container">
        <div class="header-content">
          <!-- Name and title -->
          <div class="name-title">
            <h3 class="name">{{firstName}} {{lastName}}</h3>
            {{#if jobTitle}}
              <h2 class="job-title">{{jobTitle}}</h2>
            {{/if}}
          </div>
          
          <!-- Contact details -->
          <div class="contact-info">
            {{#if email}}
              <div class="contact-item">
                <span>{{email}}</span>
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
            {{/if}}
            
            {{#if phone}}
              <div class="contact-item">
                <span>{{phone}}</span>
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
            {{/if}}
            
            {{#if address}}
              <div class="contact-item">
                <span>{{address}}</span>
                <svg class="contact-icon" viewBox="0 0 24 24">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
            {{/if}}
            
            <!-- Social links -->
            <div class="social-links">
              {{#if linkedinUrl}}
                <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon" viewBox="0 0 24 24">
                    <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
                  </svg>
                </a>
              {{/if}}
              
              {{#if githubUrl}}
                <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </a>
              {{/if}}
              
              {{#if portfolioUrl}}
                <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg class="social-icon-outline" viewBox="0 0 24 24">
                    <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Main content in a simplified magazine layout -->
    <div class="main-content">
      <!-- Summary section (simplified, no decorative quotes) -->
      {{#if summary}}
        <div class="summary">
          <p class="summary-text">{{summary}}</p>
        </div>
      {{/if}}
      
      <!-- Two-column layout for content -->
      <div class="grid">
        <!-- Main column - experience and projects -->
        <div class="main-column">
          <!-- Experience section -->
          {{#if experience.length}}
            <div class="section">
              <h3 class="section-title">Experience</h3>
              
              <div class="section-content">
                {{#each experience}}
                  <div class="experience-item">
                    <div class="experience-header">
                      <h4 class="experience-title">{{this.title}}</h4>
                      <span class="experience-date">
                        {{this.startDate}}{{#if this.startDate}}{{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}{{/if}}
                      </span>
                    </div>
                    
                    <h5 class="experience-company">
                      {{this.companyName}}
                      {{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                      {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                    </h5>
                    
                    <div class="experience-description">{{{this.workSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Projects section -->
          {{#if projects.length}}
            <div class="section">
              <h3 class="section-title">Projects</h3>
              
              <div class="section-content">
                {{#each projects}}
                  <div class="project-item">
                    <div class="project-header">
                      <h4 class="project-title">{{this.projectName}}</h4>
                      
                      <div class="project-links">
                        {{#if this.githubLink}}
                          <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                            View Code
                          </a>
                        {{/if}}
                        
                        {{#if this.deployedLink}}
                          <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                            Live Demo
                          </a>
                        {{/if}}
                      </div>
                    </div>
                    
                    {{#if this.techStack}}
                      <p class="project-tech">{{this.techStack}}</p>
                    {{/if}}
                    
                    <div class="project-description">{{{this.projectSummary}}}</div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Certifications Section - MOVED TO LEFT COLUMN -->
          {{#if certifications.length}}
            <div class="section">
              <h3 class="section-title">Certifications</h3>
              
              <div class="section-content">
                {{#each certifications}}
                  <div class="certification-item">
                    <!-- First row: name on left, date on right -->
                    <div class="certification-header">
                      <h4 class="certification-title">{{this.name}}</h4>
                      {{#if this.date}}
                        <span class="certification-date">{{this.date}}</span>
                      {{/if}}
                    </div>
                    
                    <!-- Second row: issuer on left, credential link on right -->
                    <div class="certification-meta">
                      <h5 class="certification-issuer">{{this.issuer}}</h5>
                      
                      {{#if this.credentialLink}}
                        <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="certification-link">
                          <svg class="certification-link-icon" viewBox="0 0 24 24">
                            <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101" />
                            <path d="M10.172 13.828a4 4 0 005.656 0l4-4a4 4 0 10-5.656-5.656l-1.102 1.101" />
                          </svg>
                          View
                        </a>
                      {{/if}}
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
        
        <!-- Sidebar - education and skills -->
        <div class="sidebar">
          <!-- Education section -->
          {{#if education.length}}
            <div class="section">
              <h3 class="section-title">Education</h3>
              
              <div class="section-content">
                {{#each education}}
                  <div class="education-item">
                    <h4 class="education-title">
                      {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                    </h4>
                    
                    <h5 class="education-school">{{this.universityName}}</h5>
                    
                    <p class="education-date">
                      {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                    </p>
                    
                    {{#if this.grade}}
                      <p class="education-grade">{{this.gradeType}}: {{this.grade}}</p>
                    {{/if}}
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Skills section -->
          {{#if skills.length}}
            <div class="section">
              <h3 class="section-title">Skills</h3>
              
              <div class="skills-container">
                {{#each skills}}
                  <div class="skill-item">
                    <span class="skill-name">{{this.name}}</span>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/if}}
          
          <!-- Additional Sections Logic -->
          {{#if additionalSections.length}}
            {{#each additionalSections}}
              <div class="section">
                <h3 class="section-title">{{this.title}}</h3>
                <div class="additional-content">
                  {{{this.content}}}
                </div>
              </div>
            {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
</body>
</html>