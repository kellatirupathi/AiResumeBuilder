<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 1.25rem;
      background-color: white;
      box-sizing: border-box;
    }
    
    /* Header section */
    .header {
      text-align: center;
      margin-bottom: 0.75rem;
    }
    
    .name {
      font-size: 1.875rem;
      font-weight: bold;
      margin-bottom: 0.25rem;
      color: {{themeColor}};
    }
    
    /* Contact information */
    .contact-row {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      font-size: 0.875rem;
      color: #4b5563;
      gap: 0.5rem;
      margin-bottom: 0.25rem;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
    }
    
    .contact-icon {
      width: 0.75rem;
      height: 0.75rem;
      margin-right: 0.25rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Social links */
    .social-links {
      display: flex;
      justify-content: center;
      gap: 0.75rem;
      font-size: 0.875rem;
    }
    
    .social-link {
      color: #4b5563;
      text-decoration: none;
      transition: color 0.2s;
    }
    
    .social-link:hover {
      color: #1f2937;
    }
    
    .social-icon {
      width: 1rem;
      height: 1rem;
      fill: currentColor;
    }
    
    .social-icon-outline {
      width: 1rem;
      height: 1rem;
      fill: none;
      stroke: currentColor;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
    }
    
    /* Divider */
    .divider {
      border: none;
      border-bottom: 2px solid #d1d5db;
      margin: 0.75rem 0;
    }
    
    /* Sections */
    .section {
      margin-bottom: 0.75rem;
    }
    
    .section-title {
      font-size: 1.125rem;
      font-weight: bold;
      text-transform: uppercase;
      margin-bottom: 0.25rem;
      color: {{themeColor}};
    }
    
    .section-title-underline {
      border-bottom: 1px solid #d1d5db;
      padding-bottom: 0.25rem;
    }
    
    .section-content {
      margin-top: 0.25rem;
    }
    
    /* Text styling */
    .text-sm {
      font-size: 0.875rem;
    }
    
    .text-gray-700 {
      color: #374151;
    }
    
    .text-gray-600 {
      color: #4b5563;
    }
    
    .leading-relaxed {
      line-height: 1.625;
    }
    
    /* Skills */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
      margin-top: 0.25rem;
    }
    
    .skill-tag {
      font-size: 0.875rem;
      color: #4b5563;
      background-color: #f3f4f6;
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
    }
    
    /* Experience & Projects */
    .item {
      margin-bottom: 0.5rem;
      margin-top: 0.25rem;
    }
    
    .item-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.1rem; /* Reduced spacing between header and content */
    }
    
    .item-title {
      font-size: 1rem;
      font-weight: bold;
      color: #1f2937;
      margin: 0;
    }
    
    .item-meta {
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    .item-content {
      margin-top: 0.25rem;
      font-size: 0.875rem;
      color: #4b5563;
    }
    
    .item-tech {
      font-size: 0.875rem;
      color: #4b5563;
      margin-top: 0.25rem;
    }
    
    .tech-label {
      font-weight: bold;
    }
    
    .project-links {
      display: flex;
      gap: 0.5rem;
    }
    
    .project-link {
      font-size: 0.875rem;
      color: #4b5563;
      text-decoration: none;
    }
    
    .project-link:hover {
      color: #1f2937;
    }
    
    @media print {
      .resume {
        margin: 0;
        padding: 20px;
        box-shadow: none;
      }
      
      .page-break {
        page-break-before: always;
      }
      
      .item, .item-header, .item-title, .item-meta {
        page-break-inside: avoid;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header Section - Name and Contact Info -->
    <div class="header">
      <h1 class="name">{{firstName}} {{lastName}}</h1>
      
      <!-- Location and Contact Row -->
      <div class="contact-row">
        {{#if address}}
          <span class="contact-item">
            {{address}}
          </span>
        {{/if}}
        
        {{#if email}}
          <span class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24">
              <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {{email}}
          </span>
        {{/if}}
        
        {{#if phone}}
          <span class="contact-item">
            <svg class="contact-icon" viewBox="0 0 24 24">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {{phone}}
          </span>
        {{/if}}
      </div>
      
      <!-- Social Links -->
      <div class="social-links">
        {{#if linkedinUrl}}
          <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24">
              <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
            </svg>
          </a>
        {{/if}}
        
        {{#if githubUrl}}
          <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        {{/if}}
        
        {{#if portfolioUrl}}
          <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon-outline" viewBox="0 0 24 24">
              <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </a>
        {{/if}}
      </div>
    </div>
    
    <!-- Horizontal Line -->
    <hr class="divider">
    
    <!-- Professional Summary - ATS-friendly section -->
    <div class="section">
      <h2 class="section-title">Summary</h2>
      {{#if summary}}
        <p class="text-sm leading-relaxed text-gray-700">{{summary}}</p>
      {{/if}}
    </div>
    
    <!-- Technical Skills Section - ATS-friendly -->
    {{#if skills.length}}
      <div class="section">
        <h2 class="section-title section-title-underline">Technical Skills</h2>
        
        <div class="skills-container">
          {{#each skills}}
            <div class="skill-tag">{{this.name}}</div>
          {{/each}}
        </div>
      </div>
    {{/if}}
    
    <!-- Experience Section - ATS keyword rich -->
    {{#if experience.length}}
      <div class="section">
        <h2 class="section-title section-title-underline">Experience</h2>
        
        <div class="section-content">
          {{#each experience}}
            <div class="item">
              <div class="item-header">
                <h3 class="item-title">
                  {{this.title}} | {{this.companyName}}
                </h3>
                <div class="item-meta">
                  {{this.city}}{{#if this.city}}{{#if this.state}}, {{/if}}{{/if}}{{this.state}} | {{this.startDate}} - {{#if this.currentlyWorking}}Present{{else}}{{this.endDate}}{{/if}}
                </div>
              </div>
              
              <div class="item-content">{{{this.workSummary}}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
    
    <!-- Projects Section - Highlighting technical achievements -->
    {{#if projects.length}}
      <div class="section">
        <h2 class="section-title section-title-underline">Projects</h2>
        
        <div class="section-content">
          {{#each projects}}
            <div class="item">
              <div class="item-header">
                <h3 class="item-title">{{this.projectName}}</h3>
                <div class="project-links">
                  {{#if this.githubLink}}
                    <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                      GitHub
                    </a>
                  {{/if}}
                  {{#if this.deployedLink}}
                    <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                      Demo
                    </a>
                  {{/if}}
                </div>
              </div>
              
              {{#if this.techStack}}
                <div class="item-tech">
                  <span class="tech-label">Tech:</span> {{this.techStack}}
                </div>
              {{/if}}
              
              <div class="item-content">{{{this.projectSummary}}}</div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
    
    <!-- Education Section -->
    {{#if education.length}}
      <div class="section">
        <h2 class="section-title section-title-underline">Education</h2>
        
        <div class="section-content">
          {{#each education}}
            <div class="item">
              <div class="item-header">
                <h3 class="item-title">
                  {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                </h3>
                <div class="item-meta">
                  {{this.startDate}} - {{this.endDate}}
                </div>
              </div>
              
              <p class="text-sm text-gray-700" style="margin: 0.1rem 0;">{{this.universityName}}</p>
              
              {{#if this.grade}}
                <p class="text-sm text-gray-600" style="margin: 0.1rem 0;">
                  {{this.gradeType}}: {{this.grade}}
                </p>
              {{/if}}
              
              {{#if this.description}}
                <p class="text-sm text-gray-600" style="margin: 0.1rem 0;">{{this.description}}</p>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
    
    <!-- Certifications Section -->
    {{#if certifications.length}}
      <div class="section">
        <h2 class="section-title section-title-underline">Certifications</h2>
        
        <div class="section-content">
          {{#each certifications}}
            <div class="item">
              <div class="item-header">
                <h3 class="item-title">{{this.name}}</h3>
                {{#if this.date}}
                  <span class="item-meta">{{this.date}}</span>
                {{/if}}
              </div>
              
              <div class="item-header" style="margin-top: 0.1rem; margin-bottom: 0.1rem;">
                <p class="text-sm text-gray-700" style="margin: 0;">{{this.issuer}}</p>
                
                {{#if this.credentialLink}}
                  <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                    View
                  </a>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
</body>
</html>