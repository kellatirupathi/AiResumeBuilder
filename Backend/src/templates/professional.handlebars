<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{firstName}} {{lastName}}</title>
  <style>
    /* Base styles - Matching React component */
    @page {
      size: A4;
      margin: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.5;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: white;
    }
    
    .resume {
      width: 210mm;
      min-height: 297mm;
      margin: 0;
      padding: 0;
      background-color: white;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      border-radius: 6px;
      overflow: hidden;
    }
    
    /* Header Section - Centered like React */
    .header {
      padding: 20px 20px 0 20px;
      text-align: center;
    }
    
    .name {
      font-size: 24px;
      font-weight: bold;
      margin: 0 0 5px 0;
      color: #333;
      letter-spacing: -0.025em;
    }
    
    .job-title {
      font-size: 16px;
      font-weight: normal;
      margin: 5px 0 10px 0;
      color: #555;
    }
    
    /* Contact info - Centered layout */
    .contact-info {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 16px;
      margin-bottom: 12px;
      font-size: 13px;
    }
    
    .contact-item {
      display: flex;
      align-items: center;
    }
    
    .contact-icon {
      width: 16px;
      height: 16px;
      margin-right: 4px;
    }
    
    /* Social links - Centered layout */
    .social-links {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-bottom: 12px;
    }
    
    .social-link {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: #333;
      font-size: 13px;
    }
    
    .social-link:hover {
      color: #111;
    }
    
    .social-icon {
      width: 16px;
      height: 16px;
      margin-right: 4px;
    }
    
    /* Two Column Layout - Exact React proportions */
    .two-column {
      display: flex;
      flex-direction: row;
    }
    
    .main-column {
      width: 65%;
      padding: 0 20px 20px 20px;
    }
    
    .side-column {
      width: 35%;
      padding: 0 20px 20px 10px;
      background-color: #f9f9f9;
    }
    
    /* Section styles - Matching React styling */
    .section {
      margin-bottom: 16px;
    }
    
    .section-title {
      font-size: 16px;
      font-weight: bold;
      text-transform: uppercase;
      margin: 0 0 10px 0;
      padding-bottom: 5px;
      border-bottom: 1px solid #ddd;
      color: #333;
    }
    
    /* Summary */
    .summary {
      font-size: 13px;
      line-height: 1.4;
      margin-bottom: 15px;
    }
    
    /* Experience - No timeline bullets, matching React */
    .experience-item {
      margin-bottom: 12px;
      position: relative;
      padding-left: 2px;
    }
    
    .experience-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 5px;
    }
    
    .job-title-name {
      font-size: 15px;
      font-weight: bold;
      margin: 0;
    }
    
    .company-info {
      font-size: 13px;
      margin: 2px 0;
    }
    
    .job-date {
      font-size: 12px;
      color: #666;
    }
    
    .job-description {
      font-size: 13px;
      line-height: 1.4;
    }
    
    /* Bullet points styling for experience and projects */
    .job-description ul {
      margin: 5px 0;
      padding-left: 16px;
    }
    
    .job-description li {
      margin-bottom: 4px;
      list-style-type: disc;
    }
    
    .job-description li::marker {
      color: #666;
    }
    
    /* Projects */
    .project-item {
      margin-bottom: 12px;
    }
    
    .project-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 5px;
    }
    
    .project-title {
      font-size: 15px;
      font-weight: bold;
      margin: 0;
    }
    
    .project-links {
      display: flex;
      gap: 8px;
    }
    
    .project-link {
      font-size: 12px;
      color: #555;
      text-decoration: none;
      display: flex;
      align-items: center;
    }
    
    .project-link:hover {
      color: #111;
    }
    
    .project-link-icon {
      width: 14px;
      height: 14px;
      margin-right: 4px;
    }
    
    .project-tech {
      font-size: 12px;
      color: #666;
      margin: 2px 0 4px 0;
    }
    
    .project-description {
      font-size: 13px;
      line-height: 1.4;
    }
    
    /* Bullet points styling for projects */
    .project-description ul {
      margin: 5px 0;
      padding-left: 16px;
    }
    
    .project-description li {
      margin-bottom: 4px;
      list-style-type: disc;
    }
    
    .project-description li::marker {
      color: #666;
    }
    
    /* Skills - Matching React pill styling */
    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    
    .skill-tag {
      font-size: 12px;
      padding: 5px 10px;
      background-color: #f1f1f1;
      border-radius: 15px;
      border: 1px solid #ddd;
      display: inline-block;
    }
    
    /* Education */
    .education-item {
      margin-bottom: 10px;
    }
    
    .education-degree {
      font-size: 14px;
      font-weight: bold;
      margin: 0 0 2px 0;
    }
    
    .education-school {
      font-size: 13px;
      margin: 0 0 2px 0;
    }
    
    .education-dates {
      font-size: 12px;
      color: #666;
      display: inline-block;
      margin-right: 10px;
    }
    
    .education-grade {
      font-size: 12px;
      color: #666;
      display: inline-block;
    }
    
    /* Certifications - No timeline bullets, matching React */
    .certification-item {
      margin-bottom: 10px;
      position: relative;
      padding-left: 2px;
    }
    
    .certification-title {
      font-size: 14px;
      font-weight: bold;
      margin: 0 0 2px 0;
    }
    
    .certification-issuer {
      font-size: 13px;
      margin: 0 0 2px 0;
    }
    
    .certification-view {
      font-size: 12px;
      color: #555;
      text-decoration: none;
    }
    
    .certification-view:hover {
      color: #111;
    }
    
    /* Additional sections styling */
    .additional-content {
      font-size: 13px;
      line-height: 1.4;
    }
    
    .additional-content ul {
      margin: 5px 0;
      padding-left: 16px;
    }
    
    .additional-content li {
      margin-bottom: 4px;
      list-style-type: disc;
    }
    
    .additional-content li::marker {
      color: #666;
    }
    
    .additional-content p {
      margin-bottom: 8px;
    }
    
    .additional-content h4 {
      font-weight: bold;
      font-size: 14px;
      margin-bottom: 4px;
    }
    
    .additional-content h5 {
      font-weight: 500;
      font-size: 12px;
      margin-bottom: 4px;
    }
    
    .additional-content strong {
      font-weight: bold;
    }
    
    /* Responsive adjustments for smaller screens */
    @media (max-width: 768px) {
      .two-column {
        flex-direction: column;
      }
      
      .main-column, .side-column {
        width: 100%;
        padding: 0 15px 15px 15px;
      }
    }
    
    /* Print-specific styles */
    @media print {
      body {
        -webkit-print-color-adjust: exact !important;
        color-adjust: exact !important;
      }
      
      .resume {
        width: 100%;
        height: auto;
        box-shadow: none;
        border-radius: 0;
      }
      
      .two-column {
        display: flex !important;
        flex-direction: row !important;
      }
      
      .main-column {
        width: 65% !important;
      }
      
      .side-column {
        width: 35% !important;
        background-color: #f9f9f9 !important;
      }
    }
  </style>
</head>
<body>
  <div class="resume">
    <!-- Header Section - Centered like React -->
    <div class="header">
      <h1 class="name">{{firstName}} {{lastName}}</h1>
      {{#if jobTitle}}
        <h2 class="job-title">{{jobTitle}}</h2>
      {{/if}}
      
      <!-- Contact Info - Centered layout -->
      <div class="contact-info">
        {{#if email}}
          <div class="contact-item">
            <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>{{email}}</span>
          </div>
        {{/if}}
        
        {{#if phone}}
          <div class="contact-item">
            <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <span>{{phone}}</span>
          </div>
        {{/if}}
        
        {{#if address}}
          <div class="contact-item">
            <svg class="contact-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>{{address}}</span>
          </div>
        {{/if}}
      </div>
      
      <!-- Social Links - Centered layout -->
      <div class="social-links">
        {{#if linkedinUrl}}
          <a href="{{formatUrl linkedinUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span>LinkedIn</span>
          </a>
        {{/if}}
        
        {{#if githubUrl}}
          <a href="{{formatUrl githubUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
            </svg>
            <span>GitHub</span>
          </a>
        {{/if}}
        
        {{#if portfolioUrl}}
          <a href="{{formatUrl portfolioUrl}}" target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span>Portfolio</span>
          </a>
        {{/if}}
      </div>
    </div>
    
    <!-- Two Column Layout - Exact React proportions -->
    <div class="two-column">
      <!-- Main Column (left side) - 65% width -->
      <div class="main-column">
        <!-- Summary Section -->
        {{#if summary}}
          <div class="section">
            <h3 class="section-title">Summary</h3>
            <p class="summary">{{summary}}</p>
          </div>
        {{/if}}
        
        <!-- Work Experience Section -->
        {{#if experience.length}}
          <div class="section">
            <h3 class="section-title">Work Experience</h3>
            
            {{#each experience}}
              <div class="experience-item">
                <div class="experience-header">
                  <h4 class="job-title-name">{{this.title}}</h4>
                  <span class="job-date">
                    {{this.startDate}}{{#if this.startDate}}{{#if this.currentlyWorking}} - Present{{else}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}{{/if}}
                  </span>
                </div>
                <p class="company-info">
                  {{this.companyName}}{{#if this.city}}{{#if this.companyName}}, {{/if}}{{this.city}}{{/if}}
                  {{#if this.state}}{{#if this.city}}, {{/if}}{{this.state}}{{/if}}
                </p>
                <div class="job-description">{{{this.workSummary}}}</div>
              </div>
            {{/each}}
          </div>
        {{/if}}
        
        <!-- Projects Section -->
        {{#if projects.length}}
          <div class="section">
            <h3 class="section-title">Projects</h3>
            
            {{#each projects}}
              <div class="project-item">
                <div class="project-header">
                  <h4 class="project-title">{{this.projectName}}</h4>
                  <div class="project-links">
                    {{#if this.githubLink}}
                      <a href="{{formatUrl this.githubLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                        <svg class="project-link-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                        </svg>
                        Code
                      </a>
                    {{/if}}
                    {{#if this.deployedLink}}
                      <a href="{{formatUrl this.deployedLink}}" target="_blank" rel="noopener noreferrer" class="project-link">
                        <svg class="project-link-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                          <polyline points="15 3 21 3 21 9"></polyline>
                          <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                        Live Demo
                      </a>
                    {{/if}}
                  </div>
                </div>
                
                {{#if this.techStack}}
                  <p class="project-tech">
                    <strong>Technologies:</strong> {{this.techStack}}
                  </p>
                {{/if}}
                
                <div class="project-description">{{{this.projectSummary}}}</div>
              </div>
            {{/each}}
          </div>
        {{/if}}
      </div>
      
      <!-- Side Column (right side) - 35% width with background -->
      <div class="side-column">
        <!-- Skills Section -->
        {{#if skills.length}}
          <div class="section">
            <h3 class="section-title">Skills</h3>
            
            <div class="skills-container">
              {{#each skills}}
                <span class="skill-tag">{{this.name}}</span>
              {{/each}}
            </div>
          </div>
        {{/if}}
        
        <!-- Education Section -->
        {{#if education.length}}
          <div class="section">
            <h3 class="section-title">Education</h3>
            
            {{#each education}}
              <div class="education-item">
                <h4 class="education-degree">
                  {{this.degree}}{{#if this.major}}{{#if this.degree}} in {{/if}}{{this.major}}{{/if}}
                </h4>
                <p class="education-school">{{this.universityName}}</p>
                <div>
                  <span class="education-dates">
                    {{this.startDate}}{{#if this.startDate}}{{#if this.endDate}} - {{this.endDate}}{{/if}}{{/if}}
                  </span>
                  {{#if this.grade}}
                    <span class="education-grade">
                      {{this.gradeType}}: {{this.grade}}
                    </span>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          </div>
        {{/if}}
        
        <!-- Certifications Section - No timeline bullets -->
        {{#if certifications.length}}
          <div class="section">
            <h3 class="section-title">Certifications</h3>
            
            {{#each certifications}}
              <div class="certification-item">
                <h4 class="certification-title">{{this.name}}</h4>
                <p class="certification-issuer">{{this.issuer}}</p>
                
                <div>
                  {{#if this.date}}
                    <span class="education-dates">{{this.date}}</span>
                  {{/if}}
                  
                  {{#if this.credentialLink}}
                    <a href="{{formatUrl this.credentialLink}}" target="_blank" rel="noopener noreferrer" class="certification-view">
                      View Credential
                    </a>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          </div>
        {{/if}}
        
        <!-- Additional Sections - Styled to match template -->
        {{#each additionalSections}}
          <div class="section">
            <h3 class="section-title">{{this.title}}</h3>
            <div class="additional-content">{{{this.content}}}</div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</body>
</html>